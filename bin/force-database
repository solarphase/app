#!/usr/bin/env node

var models = require('../models');

models.sequelize.sync({ force: true }).then(function() {
  models.Page.create({
    title: 'Home',
    url: '/',
    role: 'index',
    content: '# Hello World\r\nWelcome to the website.'
  }).then(function(page) {
    models.NavigationItem.create({
      title: 'Home'
    }).then(function(item) {
      item.setPage(page);
    }); 
  });


  models.Page.create({
    title: 'Test',
    url: '/test',
    content: '# Test\r\nWow, it works.'
  }).then(function(page) {
    models.NavigationItem.create({
      title: 'Test',
      ParentId: 1
    }).then(function(item) {
      item.setPage(page);
    });
  });

  models.Page.create({
    title: 'Test 2',
    url: '/test2',
    content: '# Test2\r\nWow, it probably works.'
  }).then(function(page) {
    models.NavigationItem.create({
      title: 'Test 2'
    }).then(function(item) {
      item.setPage(page);
    });
  });
});

