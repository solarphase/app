#!/usr/bin/env node

var repl = require('repl');

var app = require('../app');
var models = require('../models');

var replServer = repl.start({
  prompt: 'SOLAR > ',
  input: process.stdin,
  output: process.stdout
});

replServer.on('reset', function(context) {
  replServer.context.app = app;
  replServer.context.models = models;
});

replServer.context.app = app;
replServer.context.models = models;

