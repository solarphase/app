<% var isActive = active.indexOf(item.id) > -1; %>
<li class="<%= isActive ? 'active' : '' %>">
  <a href="<%= item.url %>"><%= item.title %></a>
  <% if (isActive && item.Children) { %>
    <ul>
      <% item.Children.forEach(function(child) { %>
        <%- partial('website/navigation-item', {item:child}) %>
      <% }); %>
    </ul>
  <% } %>
</li>

