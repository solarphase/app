<h1>Pages</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>URL</th>
      <th>Navigation Item</th>
      <th class="text-right">
        <a class="btn btn-sm btn-primary" title="New Page" href="/admin/pages/new">
          <span class="glyphicon glyphicon-file"></span>
        </a>
      </th>
    </tr>
  </thead>
  <tbody>
    <% pages.forEach(function(page) { %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.url %></td>
        <td>
          <% if (page.NavigationItem) { %>
            <a href="/admin/navigation/<%= page.NavigationItem.id %>/edit">
              <%= page.NavigationItem.title %>
            </a>
          <% } %>
        </td>
        <td class="text-right">
          <a href="<%= page.url %>" title="View Page" class="btn btn-sm btn-default">
            <span class="glyphicon glyphicon-eye-open"></span>
          </a>
          <a href="/admin/pages/<%= page.id %>/edit" title="Edit Page" class="btn btn-sm btn-primary">
            <span class="glyphicon glyphicon-edit"></span>
          </a>
          <form action="/admin/pages/<%= page.id %>" method="POST" class="inline">
            <input type="hidden" name="_method" value="DELETE"/>
            <button class="btn btn-sm btn-danger" title="Delete Page">
              <span class="glyphicon glyphicon-trash"></span>
            </button>
          </form>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>

